<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nim_contact_list_item_selecter"
    android:minHeight="55dip">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/avatar_size_in_contact"
            android:layout_height="@dimen/avatar_size_in_contact"
            android:layout_centerInParent="true"
            android:contentDescription="@string/empty"
            android:scaleType="fitStart"
            android:src="@drawable/ic_secretary" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_func_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/head_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="系统功能"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tab_new_msg_label"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/tv_func_name"
        android:background="@drawable/shape_indicator_badge"
        android:gravity="center"
        android:singleLine="true"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/nim_arrow_right" />

    <View
        android:id="@+id/bottomLine"
        style="@style/horizontal_light_thin_divider"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/head_layout" />

</RelativeLayout>