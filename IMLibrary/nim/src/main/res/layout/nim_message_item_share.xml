<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_item_query_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <ImageView
        android:id="@+id/message_item_query_img"
        android:layout_width="@dimen/avatar_max_size"
        android:layout_height="@dimen/avatar_max_size"
        android:layout_gravity="center_vertical"
        android:layout_margin="3dp"
        android:contentDescription="@string/empty"
        android:scaleType="centerCrop"
        android:src="@drawable/sdk_share_dialog_thumb_default" />

    <LinearLayout
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_item_query_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="标题"
            android:textColor="@color/color_black_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/message_item_query_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:text="内容"
            android:textColor="@color/color_grey_999999"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>