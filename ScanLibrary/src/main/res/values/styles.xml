<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ToolBar菜单样式.-->
    <style name="toolbar_popup_theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/ToolbarOverflowMenuStyle</item>
        <!-- 分隔线 -->
        <item name="android:dropDownListViewStyle">@style/ToolbarPopupMenuListView</item>
    </style>

    <style name="ToolbarOverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--设置不覆盖锚点-->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">#ffffff</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="actionMenuTextColor">#333333</item>
        <item name="android:textSize">28sp</item>

    </style>
    <!-- 分隔线 -->
    <style name="ToolbarPopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">#d9d9d9</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ToolBar.Theme.Menu" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/black</item>
        <!-- 溢出菜单图标自定义-->
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Menu</item>
    </style>

    <style name="ActionButton.Menu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/icon_more</item>
    </style>
</resources>